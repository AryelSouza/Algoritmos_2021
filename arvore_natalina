niv = int(input())
espc = niv - 1
ast = 1
espc_trc = niv - 1


for x in range(niv):
    print(' ', end='')
print('*')

while niv != 0 :
    for i in range(espc):
        print(' ', end="")
    print('/', end='')
    for i in range(ast):
        print('*', end="")
    print('\\', end='')
    print()
    niv -= 1
    espc -= 1
    ast += 2

for i in range(espc_trc):
    print(' ', end="")

print('|||',end="")
print("FELIZ NATAL!")